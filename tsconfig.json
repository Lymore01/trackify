{
    "compilerOptions": {
      "target": "esnext",
      "module": "nodenext",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "rewriteRelativeImportExtensions": true,
      "verbatimModuleSyntax": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@config/*": ["config/*.ts"],
        "@middlewares/*": ["src/middlewares/*.ts"],
        "@routes/*": ["src/routes/*.ts"],
        "@controllers/*": ["src/controllers/*.ts"],
        "@lib/*": ["src/lib/*.ts"],
      }
    }
  }